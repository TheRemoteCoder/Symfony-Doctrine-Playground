<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle` and uncomment the following Encore helpers to start using Symfony UX #}
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="bg-light">
		<nav class="navbar navbar-dark navbar-expand-md sticky-top bg-dark p-0">
			<a class="navbar-brand col-sm-3 col-md-2 mr-0" href="{{ path('micropost_index') }}">Micro Post App</a>
			<div class="w-100 order-1 order-md-0">
				<ul class="navbar-nav px-3">
					<li class="nav-item text-nowrap">
						<a class="nav-link" href="{{ path('micropost_add') }}">
							{{ 'Add new post' | trans }}
						</a>
					</li>
				</ul>
			</div>
			<div class="order-2 order-md-1">
				<ul class="navbar-nav px-3"></ul>
			</div>
		</nav>
		<main role="main" class="container">
			<div class="my-3 p-3 bg-white rounded box-shadow">
				&nbsp;
				<!-- Fixes formatting bug -->

				{% block body %}{% endblock %}
			</div>
		</main>

		<br/>
		<br/>
	<!-- https://symfony.com/doc/2.8/templating/app_variable.html -->
		<!--
				{% if app.debug %}
					{{ dump(app.environment) }}
					{{ dump(app.debug) }}
					{{ dump(app.user) }}
				{% endif %}
		        -->

	</body>
</html>
